/**
 * Возвращает объект Event
 *
 * @param {Object} config                        Параметры события
 * @param {Number|Date} config.start             Начало события
 * @param {Number|Date} config.end               Конец события
 * @param {String}      [config.name="Событие"]  Имя события
 * @param {String}      config.description       Описание события
 * @param {Number}      [config.rating=5]        Рейтинг события
 *
 * @example
 *    Event({
 *      start: new Date('2011-10-10T14:48:00'),
 *      end: new Date('2011-10-10T15:48:00'),
 *      name: "Совещание",
 *      description: "Планирование тимбилдинга",
 *      rating: 4
 *    })
 *
 * @return {Object}
 */

function Event(config) {
    if (!config.start || !config.end || !config.description) {
        throw new TypeError('bad config')
    }
    return {
        start: +config.start,
        end: +config.end,
        name: config.name || "Событие",
        description: config.description,
        rating: config.rating || 5
    };
}
