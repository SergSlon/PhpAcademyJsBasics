function calcTime(A, B, C) {
  return calcDate((B - A) / C)
}

var SECOND = 1
var MINUTE = SECOND * 60
var HOUR = MINUTE * 60
var DAY = HOUR * 24

function calcDate(N) {
  var totalSeconds = N * DAY
  function subsTime(x) {
    var time = Math.floor(totalSeconds / x)
    totalSeconds -= time * x
    return time
  }
  var days = subsTime(DAY)
  var hours = subsTime(HOUR)
  var minutes = subsTime(MINUTE)
  var seconds = subsTime(SECOND)
  return 'we need ' +
    days + ' days ' +
    hours + ' hours ' +
    minutes + ' minutes ' +
    seconds + ' seconds to complite the trip'
}
console.log(calcTime(1, 15, 5))
we need 2 days 19 hours 11 minutes 59 seconds to complite the trip

